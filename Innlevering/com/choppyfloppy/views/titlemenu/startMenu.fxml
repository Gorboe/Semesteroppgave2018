<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Screen?>
<fx:root xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="${screen.visualBounds.width}" prefHeight="${screen.visualBounds.height}" type="javafx.scene.layout.VBox" stylesheets="@title.css" alignment="CENTER">

    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <Label styleClass="titleMenuStart" text="CHOPPY" />

    <Button fx:id="newGameButton" styleClass="menubutton" mnemonicParsing="false" text="New Game" onAction="#newGameClicked" />
    <Button fx:id="fortsettButton" styleClass="menubutton" mnemonicParsing="false" text="Continue" onAction="#continueClicked"/>
    <Button fx:id="exitButton" styleClass="menubutton" mnemonicParsing="false" text="Exit" onAction="#exitClicked"/>

</fx:root>
