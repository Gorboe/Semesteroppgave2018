<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Screen?>
<fx:root xmlns="http://javafx.com/javafx" fx:id="titleMenu" xmlns:fx="http://javafx.com/fxml" prefWidth="${screen.visualBounds.width}" prefHeight="${screen.visualBounds.height}" type="javafx.scene.layout.VBox" stylesheets="@title.css" alignment="CENTER">

    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>


    <Button fx:id="newGameButton" styleClass="menubutton" mnemonicParsing="false" text="New Game" onAction="#newGameClicked" />
    <Button fx:id="fortsettButton" styleClass="menubutton" mnemonicParsing="false" text="Load Game" onAction="#continueClicked"/>
    <Button fx:id="exitButton" styleClass="menubutton" mnemonicParsing="false" text="Exit Game" onAction="#exitClicked"/>

</fx:root>
